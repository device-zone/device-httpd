#!/bin/bash
  
if [ $# -eq 2 ]; then

  instance="${1}"
  line="${2}"

  cat > "device-${instance}-dav.conf" <<- EOF
# Generated by $0 on `date`
# DO NOT MODIFY THIS FILE - it will be overwritten on server restart.
#

<IfModule !dav_module>
  LoadModule dav_module /usr/lib64/httpd/modules/mod_dav.so
</IfModule>
<IfModule !dav_fs_module>
  LoadModule dav_fs_module /usr/lib64/httpd/modules/mod_dav_fs.so
</IfModule>
<IfModule !dav_lock_module>
  LoadModule dav_lock_module /usr/lib64/httpd/modules/mod_dav_lock.so
</IfModule>

DavLockDB /var/lib/httpd/device-${instance}-davfslockdb
#DavGenericLockDB /var/lib/httpd/device-${instance}-davlockdb

EOF

  install -m 640 "device-${instance}-dav.conf" "/etc/httpd/conf.device.d/instance/${instance}"/dav.conf

fi


