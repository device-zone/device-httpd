#!/bin/bash
  
if [ $# -eq 2 ]; then

  instance="${1}"
  line="${2}"

  cat > "device-${instance}-dav-repo.conf" <<- EOF
# Generated by $0 on `date`
# DO NOT MODIFY THIS FILE - it will be overwritten on server restart.
#

# No extra modules required for dav repo

EOF

  install -m 640 "device-${instance}-dav-repo.conf" "/etc/httpd/conf.device.d/instance/${instance}"/dav-repo.conf

fi

