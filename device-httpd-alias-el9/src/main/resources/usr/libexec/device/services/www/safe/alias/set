#!/bin/sh

set -e
umask 0002

OPTIONS="--set name --hostname name --polar disabled --text access-url --required --relation-base /etc/device/services/www/auth --relation-name name --relation-suffix .txt --relation auth --url-path-absolute path --relation-base /etc/device/services/www/virtualhost --relation-name name --relation-suffix .txt --relation virtualhost --symlink-base /var/www/alias/safe/ --symlink directory"

if [ "$1" == "--" ]; then

  /usr/libexec/device-set ${OPTIONS} "$@"

  /usr/bin/sudo /usr/bin/systemctl try-reload-or-restart httpd-autodiscovery.service

elif [ "$1" == "-c" ]; then

  /usr/libexec/device-set ${OPTIONS} "$@"

fi

